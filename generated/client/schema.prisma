generator client {
  provider   = "prisma-client-js"
  output     = "../generated/client"
  engineType = "library"
}

datasource db {
  provider = "sqlite"
}

model Star {
  id        String   @id @default(uuid())
  content   String
  x         Float
  y         Float
  z         Float
  color     String
  category  String   @default("idea") // idea, task, question, person
  visits    Int      @default(0)
  embedding String // Storing as JSON string
  createdAt DateTime @default(now())
}
